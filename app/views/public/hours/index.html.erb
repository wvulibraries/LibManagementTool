<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <% @presenter.resources_for_list.each do |resource| %>
                <% resource.each do |item| %>
                  <% name = @presenter.resource_name(id: item.id, type: resource.name.downcase) %>
                  <li><%= link_to name, hours_path(id: item.id, type: resource.name.downcase) %></li>
                <% end %>
            <% end %>
        </ul>
    </div>
    <div id="page-content-wrapper">
        <div class="page-content">
            <h1> <%= @presenter.resource_name({id: params[:id], type: params[:type]}) %> Hours </h1>
            <%= month_calendar do |date| %>
              <%= date.strftime('%d') %>
              <% hours = @presenter.find_hours_for_date(id: params[:id], type: params[:type], date: date.to_s) %>
              <p>
                Open: <%= hours[:open_time] %><br>
                Close: <%= hours[:close_time] %><br>
                Comment: <%= hours[:comment] %>
              </p>
            <% end %>
        </div>
    </div>
</div>
